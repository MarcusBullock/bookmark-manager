<% if current_user %>
<h1> Welcome <%= current_user.username %> </h1>
<% end %>

<h1> Links </h1>

<ul id='links'>
  <% @links.each do |link| %>
    <li>
      Title: <%= link.title %>
      URL:   <%= link.url   %>
      <% alltags = [] %>
      <% link.tags.each { |x| alltags << x.name } %>
      Tag: <%= alltags.join(' ') %>
    </li>
  <% end %>
</ul>
